generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int             @id @default(autoincrement())
  name                   String
  email                  String          @unique
  password               String
  role                   Role            @default(CASHIER)
  sales                  Sale[]
  stockLogs              StockLog[]
  createdPurchaseOrders  PurchaseOrder[] @relation("CreatedPurchaseOrders")
  createdAt              DateTime        @default(now())
  updatedAt              DateTime        @updatedAt
}

enum Role {
  ADMIN
  CASHIER
  MANAGER
  PROCUREMENT
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  products  Product[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id            Int            @id @default(autoincrement())
  name          String
  sku           String         @unique
  description   String?
  costPrice     Decimal        @db.Decimal(10, 2) @default(0) // Weighted average cost (auto-calculated)
  price         Decimal        @db.Decimal(10, 2) // Selling price to customers
  stock         Int            @default(0)
  reorderLevel  Int?           @default(10) // Trigger reorder when stock falls below this
  reorderQty    Int?           @default(50) // Suggested reorder quantity
  categoryId    Int
  category      Category       @relation(fields: [categoryId], references: [id])
  saleItems     SaleItem[]
  stockLogs     StockLog[]
  purchaseItems PurchaseItem[]
  supplierProducts SupplierProduct[] // Suppliers who provide this product
  inventoryBatches InventoryBatch[] // Track inventory by purchase batch
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Sale {
  id             Int       @id @default(autoincrement())
  invoiceNumber  String    @unique @default(cuid())
  customerName   String?
  customerPhone  String?
  subtotal       Decimal   @db.Decimal(10, 2)
  taxAmount      Decimal   @db.Decimal(10, 2) @default(0)
  discountAmount Decimal   @db.Decimal(10, 2) @default(0)
  totalAmount    Decimal   @db.Decimal(10, 2)
  paymentMethod  String    // "cash" | "card"
  soldById       Int?
  soldBy         User?     @relation(fields: [soldById], references: [id])
  items          SaleItem[]
  createdAt      DateTime  @default(now())
}

model SaleItem {
  id         Int      @id @default(autoincrement())
  saleId     Int
  productId  Int
  quantity   Int
  unitPrice  Decimal  @db.Decimal(10, 2) // Selling price per unit
  unitCost   Decimal  @db.Decimal(10, 2) @default(0) // Actual cost per unit at time of sale
  totalPrice Decimal  @db.Decimal(10, 2) // Total selling price
  totalCost  Decimal  @db.Decimal(10, 2) @default(0) // Total cost (for profit calculation)
  sale       Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id])
  @@unique([saleId, productId])
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  code      String
  expiresAt DateTime
  consumed  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model StockLog {
  id            Int      @id @default(autoincrement())
  productId     Int
  product       Product  @relation(fields: [productId], references: [id])
  type          String   // "in" | "out" | "damaged" | "adjustment"
  quantity      Int
  reason        String?  // Optional: reason for stock change
  unitCost      Decimal? @db.Decimal(10, 2) // Cost per unit for this transaction
  createdBy     Int?     // User ID who made the change
  createdByUser User?    @relation(fields: [createdBy], references: [id])
  createdAt     DateTime @default(now())
}

// ============ INVENTORY BATCH TRACKING ============
// Track inventory purchases in batches to support FIFO/Weighted Average costing

model InventoryBatch {
  id              Int           @id @default(autoincrement())
  productId       Int
  product         Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  purchaseOrderId String?       // Link to purchase order if applicable
  purchaseOrder   PurchaseOrder? @relation(fields: [purchaseOrderId], references: [id])
  quantityReceived Int          // Initial quantity received
  quantityRemaining Int         // Current quantity remaining in this batch
  unitCost        Decimal       @db.Decimal(10, 2) // Cost per unit for this batch
  receivedAt      DateTime      @default(now())
  expiresAt       DateTime?     // Optional: expiration date for perishable items
  batchNumber     String?       // Optional: batch/lot number from supplier
  supplierId      String?       // Which supplier this batch came from
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([productId, quantityRemaining])
  @@index([productId, receivedAt])
}

// ============ PROCUREMENT / RESTOCKING SYSTEM ============

model Supplier {
  id             String               @id @default(uuid())
  name           String
  email          String?
  phone          String?
  address        String?
  contactPerson  String?
  taxId          String?
  paymentTerms   String?              // e.g., "Net 30", "Due on receipt"
  leadTimeDays   Int?                 // Average delivery time in days
  minOrderAmount Decimal?             @db.Decimal(10, 2)
  isActive       Boolean              @default(true)
  rating         Int?                 // 1-5 star rating
  notes          String?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  purchaseOrders PurchaseOrder[]
  supplierProducts SupplierProduct[]  // Products this supplier can provide
}

enum PurchaseStatus {
  DRAFT
  APPROVED
  PAID
  RECEIVED
  CLOSED
  CANCELLED
}

model PurchaseOrder {
  id          String          @id @default(uuid())
  supplierId  String
  supplier    Supplier        @relation(fields: [supplierId], references: [id])
  status      String          @default("DRAFT")
  totalAmount Decimal         @default(0)
  inventoryBatches InventoryBatch[] // Link to inventory batches created from this purchase
  notes       String?
  createdById Int?
  createdBy   User?           @relation("CreatedPurchaseOrders", fields: [createdById], references: [id])
  approvedAt  DateTime?
  paidAt      DateTime?
  receivedAt  DateTime?
  items       PurchaseItem[]
  payments    Payment[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model PurchaseItem {
  id              String        @id @default(uuid())
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  productId       Int
  product         Product       @relation(fields: [productId], references: [id])
  quantity        Int
  unitPrice       Decimal       @db.Decimal(10, 2)
  totalPrice      Decimal       @db.Decimal(10, 2)
  receivedQty     Int           @default(0) // Track partial deliveries
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

// ============ SUPPLIER PRODUCT CATALOG ============

model SupplierProduct {
  id                String    @id @default(uuid())
  supplierId        String
  supplier          Supplier  @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  productId         Int
  product           Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  supplierSku       String?   // Supplier's SKU for this product
  supplierPrice     Decimal   @db.Decimal(10, 2) // Cost price from supplier
  isAvailable       Boolean   @default(true)
  stockQuantity     Int?      // Supplier's current stock (if tracked)
  minOrderQty       Int       @default(1)
  leadTimeDays      Int?      // Specific lead time for this product
  isPrimarySupplier Boolean   @default(false) // Mark as preferred supplier
  lastOrderDate     DateTime?
  notes             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  @@unique([supplierId, productId])
  @@index([productId])
  @@index([supplierId])
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
}

model Payment {
  id                 String         @id @default(uuid())
  purchaseOrderId    String
  purchaseOrder      PurchaseOrder  @relation(fields: [purchaseOrderId], references: [id])
  amount             Decimal        @db.Decimal(10, 2)
  status             PaymentStatus  @default(PENDING)
  stripePaymentId    String?        @unique // Stripe PaymentIntent ID
  stripeClientSecret String?
  paymentMethod      String?        // e.g., "card", "bank_transfer"
  metadata           Json?          // Additional payment data
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
}
